                      </td>
                      <td width="15%">
                        <%= allOrders[i].formattedDate %>
                      </td>
                      <td width="7%">
                        â‚¹ <%= allOrders[i].totalAmount %>
                      </td>
                      <td width="7%">
                        <%= allOrders[i].paymentMethod %>
                      </td>
                      <!-- <td width="7%">
                        <% if (allOrders[i].status=='pending' ) { %>
                          <span id="status<%= allOrders[i]._id %>" class="badge rounded-pill alert-warning">
                            <%= allOrders[i].status %>
                          </span>
